<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox fx:id="vbox" xmlns:fx="http://javafx.com/fxml" fx:controller="at.technikum.studentmanagementsystem2.StudentEditController"
      spacing="10" alignment="CENTER" prefWidth="300" prefHeight="200" style="-fx-padding: 20;">

    <Label text="Edit Student" style="-fx-font-size: 16; -fx-font-weight: bold;"/>

    <GridPane hgap="10" vgap="10">
        <Label text="ID:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <TextField fx:id="idField" disable="true" GridPane.rowIndex="0" GridPane.columnIndex="1" editable="false"/>

        <Label text="Name:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <TextField fx:id="nameField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

        <Label text="Semester:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <TextField fx:id="semesterField" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
    </GridPane>

    <HBox spacing="10" alignment="CENTER_RIGHT">
        <Button text="OK" onAction="#handleOk"/>
        <Button text="Cancel" onAction="#handleCancel"/>
    </HBox>

</VBox>


