<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox fx:id="vbox" alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="at.technikum.studentmanagementsystem2.controller.TourLogController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <Label fx:id="welcomeText" text="TourPlanner Logs" VBox.vgrow="NEVER">
        <font>
            <Font name="Roboto Thin" size="14.0" />
        </font></Label>
    <ButtonBar prefHeight="40.0" prefWidth="200.0">
        <buttons>
            <Button fx:id="btnAdd" mnemonicParsing="true" text="_New..."  />
            <Button fx:id="btnEdit" mnemonicParsing="true" text="_Edit..." />
            <Button fx:id="btnDelete" mnemonicParsing="true" text="_Delete" />
        </buttons>
    </ButtonBar>
    <HBox>
        <children>
            <TableView fx:id="logTable">
                <columns>
                    <TableColumn text="Date" fx:id="colDate"/>
                    <TableColumn text="Comment" fx:id="colComment"/>
                    <TableColumn text="Difficulty" fx:id="colDifficulty"/>
                    <TableColumn text="Distance" fx:id="colDistance"/>
                    <TableColumn text="Time" fx:id="colTime"/>
                    <TableColumn text="Rating" fx:id="colRating"/>
                </columns>
            </TableView>
        </children>
    </HBox>

    <ButtonBar prefHeight="40.0" prefWidth="200.0">
        <buttons>
            <Button mnemonicParsing="false" text="Ok" />
            <Button mnemonicParsing="false" text="Cancel" />
        </buttons>
    </ButtonBar>
</VBox>
