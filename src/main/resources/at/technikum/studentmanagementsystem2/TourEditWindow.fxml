<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox fx:id="vbox" xmlns:fx="http://javafx.com/fxml" fx:controller="at.technikum.studentmanagementsystem2.controller.TourEditController"
      spacing="10" alignment="CENTER" prefWidth="300" prefHeight="200" style="-fx-padding: 20;">

    <Label text="Edit Tour" style="-fx-font-size: 16; -fx-font-weight: bold;"/>

    <GridPane hgap="10" vgap="10">
        <Label text="Name:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <TextField fx:id="nameField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

        <Label text="Description:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <TextField fx:id="descriptionField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

        <Label text="From:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <TextField fx:id="fromField" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

        <Label text="To:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
        <TextField fx:id="toField" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

        <Label text="Transport Type:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
        <TextField fx:id="transporttypeField" GridPane.rowIndex="4" GridPane.columnIndex="1"/>

        <Label text="Distance (km):" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
        <TextField fx:id="distanceField" GridPane.rowIndex="5" GridPane.columnIndex="1"/>

        <Label text="Estimated Time (min):" GridPane.rowIndex="6" GridPane.columnIndex="0"/>
        <TextField fx:id="estimatedtimeField" GridPane.rowIndex="6" GridPane.columnIndex="1"/>

    </GridPane>

    <HBox spacing="10" alignment="CENTER_RIGHT">
        <Button text="OK" onAction="#handleOk"/>
        <Button text="Cancel" onAction="#handleCancel"/>
    </HBox>

</VBox>


